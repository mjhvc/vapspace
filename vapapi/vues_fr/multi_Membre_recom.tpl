    <label for="promoUn">Premier courriel : </label><br /><input type="text" name="promoUn" id="promoUn" size="{recom_size}" maxlenght="{recom_max}" value="{promoUn}" /><br />
    <label for="promoDeux">Second courriel : </label><br /><input type="text" name="promoDeux" id="promoDeux" size="{recom_size}" maxlenght="{recom_max}" value="{promoDeux}" /><br />
    <label for="promoTrois">Dernier courriel : </label><br /><input type="text" name="promoTrois" id="promoTrois" size="{recom_size}" maxlenght="{recom_max}" value="{promoTrois}" /><br />
